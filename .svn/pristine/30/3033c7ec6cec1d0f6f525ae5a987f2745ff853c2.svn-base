<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="kr.or.ddit.classroom.mapper.FreeBoardMapper">
	<!-- 설문 응답 참여 여부 체크 -->
	<select id="survayChk" resultType="int" parameterType="voteNdQustnrVO">
		SELECT 
		COUNT (*) 
		FROM 
			IEM_RSPNS 
		WHERE 
			MBER_ID= #{mberId} 
		AND 
			VOTE_QUSTNR_CODE=#{voteQustnrCode}
	</select>
	<!-- 설문 게시판 사용자 응답 내용 등록 -->
	<insert id="surbeyRegistrationAjax" parameterType="IemRspnsVO">
		INSERT INTO 
			IEM_RSPNS(
			VOTE_IEM_SN
			,VOTE_QUSTNR_CODE
			,MBER_ID
			,QUES_RSPNS_CN
			,CLAS_CODE
			)
		VALUES (
			#{voteIemSn}
			,#{voteQustnrCode}
			,#{mberId}
			,#{quesRspnsCn}
			,#{clasCode}
		)
	</insert>
	<!-- 설문 게시판 학교 조회 -->
	<select id="getSchulNm" parameterType="String"  resultType="schulVO">
		SELECT 
		SCHUL_CODE
			,SCHUL_NM
			,SCHUL_ADRES
			,SCHUL_TLPHON_NO
			,SCHUL_ANNVRSRY
		FROM 
			SCHUL 
		WHERE 
			SCHUL_CODE=#{clasCode}
	</select>
	<!-- 설문 게시판 상세 조회 질문 보기 조회 -->
	<select id="detailVOList"  parameterType="String" resultType="voteQustnrDetailIemVO">
		SELECT
			VOTE_DETAIL_IEM_SN
			,VOTE_IEM_SN
			,VOTE_QUSTNR_CODE
			,VOTE_DETAIL_IEM_CN
		FROM 
			VOTE_QUSTNR_DETAIL_IEM
		WHERE
			VOTE_QUSTNR_CODE = #{voteQustnrCode}
		ORDER BY 
			VOTE_IEM_SN,VOTE_DETAIL_IEM_SN
	</select>
	<!-- 설문 게시판 상세 조회 질문 조회 -->
	<select id="iemVOList" parameterType="String" resultType="voteQustnrIemVO">
		SELECT
			VOTE_IEM_SN
			,VOTE_QUSTNR_CODE
			,VOTE_IEM_CN
			,VOTE_QUSTNR_TYPE
		FROM 
			VOTE_QUSTNR_IEM
		WHERE
			VOTE_QUSTNR_CODE = #{voteQustnrCode}
		ORDER BY 
			VOTE_IEM_SN
	</select>
	<!-- 설문 게시판 상세 조회 -->
	<select id="surveyDetailView" parameterType="String" resultType="voteNdQustnrVO">
		SELECT
			VOTE_QUSTNR_CODE
			,VOTE_QUSTNR_NM
			,VOTE_QUSTNR_CN
			,VOTE_QUSTNR_BEGIN_DT
			,VOTE_QUSTNR_END_DT
			,CMMN_DETAIL_CODE
			,CLAS_CODE
			,SCHUL_CODE
			,MBER_ID
			,WRITNG_DT
		FROM 
			VOTE_ND_QUSTNR
		WHERE
			VOTE_QUSTNR_CODE = #{voteQustnrCode}
	</select>
	<!-- 설문 게시판 토탈 값 가져오기 -->
	<select id="getTotalSurvey" parameterType="hashMap" resultType="int">
		SELECT
			COUNT(0)
		FROM
			VOTE_ND_QUSTNR N
		WHERE
			N.SCHUL_CODE = #{schulCode}
		AND
			N.CLAS_CODE= #{clasCode}
		AND
			N.CMMN_DETAIL_CODE=#{cmmnDetailCode}
		<if test="keyword != null and keyword != ''">
			<choose>
				<when test="searchCondition == ''">
					AND
						N.VOTE_QUSTNR_NM LIKE '%'||#{keyword}||'%'
					OR
						N.VOTE_QUSTNR_CN LIKE '%'||#{keyword}||'%'
					OR
						N.MBER_ID LIKE '%'||#{keyword}||'%'
				</when>
				<when test="searchCondition == 'titl'">
					AND
						N.VOTE_QUSTNR_NM LIKE '%'||#{keyword}||'%'
				</when>
				<when test="searchCondition == 'cntn'">
					AND
						N.VOTE_QUSTNR_CN LIKE '%'||#{keyword}||'%'
				</when>
				<when test="searchCondition == 'titlCntn'">
					AND
						N.VOTE_QUSTNR_NM LIKE '%'||#{keyword}||'%'
					OR
						N.VOTE_QUSTNR_CN LIKE '%'||#{keyword}||'%'
				</when>
				<when test="searchCondition == 'writ'">
					AND
						N.MBER_ID LIKE '%'||#{keyword}||'%'
				</when>
			</choose>
		</if>
	</select>
	<!-- 설문 게시판 리스트 출력 -->
	<select id="surveyList" parameterType="hashMap" resultType="voteNdQustnrVO">
		WITH T AS(
			SELECT
				ROW_NUMBER() OVER(ORDER BY N.WRITNG_DT DESC) RNUM
				,N.VOTE_QUSTNR_CODE
				,N.VOTE_QUSTNR_NM
				,N.VOTE_QUSTNR_CN
				,N.VOTE_QUSTNR_BEGIN_DT
				,N.VOTE_QUSTNR_END_DT
				,N.CMMN_DETAIL_CODE
				,N.CLAS_CODE
				,N.SCHUL_CODE
				,N.MBER_ID
				,N.WRITNG_DT
				,FN_GET_MBER_NM(N.MBER_ID) AS MBER_NM
			FROM
				VOTE_ND_QUSTNR N
			WHERE
				N.SCHUL_CODE = #{schulCode}
			AND
				N.CLAS_CODE= #{clasCode}
			AND
				N.CMMN_DETAIL_CODE=#{cmmnDetailCode}
			<if test="keyword != null and keyword != ''">
				<choose>
					<when test="searchCondition == ''">
						AND
							N.VOTE_QUSTNR_NM LIKE '%'||#{keyword}||'%'
						OR
							N.VOTE_QUSTNR_CN LIKE '%'||#{keyword}||'%'
						OR
							N.MBER_ID LIKE '%'||#{keyword}||'%'
					</when>
					<when test="searchCondition == 'titl'">
						AND
							N.VOTE_QUSTNR_NM LIKE '%'||#{keyword}||'%'
					</when>
					<when test="searchCondition == 'cntn'">
						AND
							N.VOTE_QUSTNR_CN LIKE '%'||#{keyword}||'%'
					</when>
					<when test="searchCondition == 'titlCntn'">
						AND
							N.VOTE_QUSTNR_NM LIKE '%'||#{keyword}||'%'
						OR
							N.VOTE_QUSTNR_CN LIKE '%'||#{keyword}||'%'
					</when>
					<when test="searchCondition == 'writ'">
						AND
							N.MBER_ID LIKE '%'||#{keyword}||'%'
					</when>
				</choose>
			</if>
			ORDER BY WRITNG_DT DESC
		)
		SELECT  T.*
		FROM	T
		WHERE	T.RNUM BETWEEN (#{currentPage}*10) - (10-1) AND (#{currentPage}*10)
	</select>
	<!-- 설문 게시판 투표설문세부항목 등록 -->
	<insert id="insertQustDetail">
		INSERT INTO 
			VOTE_QUSTNR_DETAIL_IEM(
			VOTE_DETAIL_IEM_SN
			,VOTE_IEM_SN
			,VOTE_QUSTNR_CODE
			,VOTE_DETAIL_IEM_CN
			)
		VALUES (
			#{voteDetailIemSn}
			,#{voteIemSn}
			,#{voteQustnrCode}
			,#{voteDetailIemCn}
		)
	</insert>
	<!-- 설문 게시판 투표설문항목 등록 -->
	<insert id="insertQustIem" parameterType="voteQustnrIemVO">
		INSERT INTO 
			VOTE_QUSTNR_IEM(
			VOTE_IEM_SN
			,VOTE_QUSTNR_CODE
			,VOTE_IEM_CN
			,VOTE_QUSTNR_TYPE
			)
		VALUES (
			#{voteIemSn}
			,#{voteQustnrCode}
			,#{voteIemCn}
			,#{voteQustnrType}
		)
	</insert>
	<!-- 설문 게시판 투표설문코드 max값 가져오기 -->
	<select id="getMaxSurveyVoteCode" resultType="int">
		SELECT 
			NVL(MAX(TO_NUMBER(VOTE_QUSTNR_CODE)),0)+1 
		FROM 
			VOTE_ND_QUSTNR
	</select>
	<!-- 설문 게시판 설문 등록 -->
	<insert id="insertQust" parameterType="voteNdQustnrVO">
		INSERT INTO 
			VOTE_ND_QUSTNR(
			VOTE_QUSTNR_CODE
			,VOTE_QUSTNR_NM
			,VOTE_QUSTNR_CN
			,VOTE_QUSTNR_BEGIN_DT
			,VOTE_QUSTNR_END_DT
			,CMMN_DETAIL_CODE
			,CLAS_CODE
			,SCHUL_CODE
			,MBER_ID
			,WRITNG_DT
			)
		VALUES (
			#{voteQustnrCode} 
			,#{voteQustnrNm}
			,#{voteQustnrCn}
			,#{voteQustnrBeginDt} 
			,#{voteQustnrEndDt} 
			,#{cmmnDetailCode} 
			,#{clasCode} 
			,#{schulCode} 
			,#{mberId}
			,SYSDATE
		)
	</insert>

	<!-- 게시글 최대값 -->
	<select id="getNttMaxCode" resultType="String">
		SELECT NVL(MAX(TO_NUMBER(NTT_CODE)),0)+1 FROM NTT
	</select>
	<!-- 텍스트 정보 insert 쿼리 -->
	<insert id="uploadFile" parameterType="atchFileVO">
		INSERT INTO ATCH_FILE(ATCH_FILE_CODE, ATCH_FILE_SN, ATCH_FILE_COURS
		, ATCH_FILE_NM, ATCH_FILE_TY, ATCH_FILE_DE, REGIST_ID)
		VALUES (
			#{atchFileCode}
			, #{atchFileSn}
			, #{atchFileCours}
			, #{atchFileNm}
			, #{atchFileTy}
			, SYSDATE
			, #{registId}
		)
	</insert>
	<!-- 
	nttCode=100, nttNm=테스트 자유게시판, nttCn=1234, nttWritngDt=null, nttSttemntAccmlt=0, nttAtchFileCode=null
	, cmmnNttSe=null, cmmnNttSttemnt=null, clasCode=OJ20240101, schulCode=7581092, mberId=aqua, rnum=0, nttRdcnt=0
	, uploadFile=null, atchFileVOList=null, memberVO=null, mberNm=null)
	 -->
	<insert id="freeBoarRegistration" parameterType="nttVO">
		INSERT INTO NTT
		(NTT_CODE
		,NTT_NM
		,NTT_CN 
		,NTT_WRITNG_DT 
		,NTT_STTEMNT_ACCMLT
		,NTT_ATCH_FILE_CODE 
		,CMMN_NTT_SE 
		,CMMN_NTT_STTEMNT 
		,CLAS_CODE 
		,SCHUL_CODE 
		,MBER_ID 
		,NTT_RDCNT
		)
		VALUES(
		#{nttCode}
		,#{nttNm}
		,#{nttCn}
		,SYSDATE
		,0
		,(SELECT #{clasCode} || 'FRB' || TRIM(TO_CHAR(NVL(MAX(SUBSTR(ATCH_FILE_CODE,14)),0)+1, '00000'))
			FROM ATCH_FILE
			WHERE SUBSTR(ATCH_FILE_CODE,11,3) = 'FRB')
		,'A08002'
		,'A15001'
		,#{clasCode}
		,#{schulCode}
		,#{mberId}
		,0
		)
		</insert>
	
	<!-- 자유게시판 목록 조회 -->
	<select id="selectNttList" parameterType="hashMap" resultType="nttVO">
		WITH T AS(
			SELECT
				ROW_NUMBER() OVER(ORDER BY N.NTT_WRITNG_DT DESC) RNUM
				,N.NTT_CODE
				,N.NTT_NM
				,N.NTT_CN
				,N.NTT_WRITNG_DT
				,N.NTT_STTEMNT_ACCMLT
				,N.NTT_ATCH_FILE_CODE
				,N.CMMN_NTT_SE
				,N.CMMN_NTT_STTEMNT
				,N.CLAS_CODE
				,N.SCHUL_CODE
				,N.MBER_ID
				,N.NTT_RDCNT
				,FN_GET_MBER_NM(N.MBER_ID) AS MBER_NM
			FROM
				NTT N
			WHERE 
				N.CMMN_NTT_SE= #{cmmnNttSe}
			<if test="keyword != null and keyword != ''">
				<choose>
					<when test="searchCondition == ''">
						AND
							N.NTT_NM LIKE '%'||#{keyword}||'%'
						OR
							N.NTT_CN LIKE '%'||#{keyword}||'%'
						OR
							N.MBER_ID LIKE '%'||#{keyword}||'%'
					</when>
					<when test="searchCondition == 'titl'">
						AND
							N.NTT_NM LIKE '%'||#{keyword}||'%'
					</when>
					<when test="searchCondition == 'cntn'">
						AND
							N.NTT_CN LIKE '%'||#{keyword}||'%'
					</when>
					<when test="searchCondition == 'titlCntn'">
						AND
							N.NTT_NM LIKE '%'||#{keyword}||'%'
						OR
							N.NTT_CN LIKE '%'||#{keyword}||'%'
					</when>
					<when test="searchCondition == 'writ'">
						AND
							N.MBER_ID LIKE '%'||#{keyword}||'%'
					</when>
				</choose>
			</if>
		)
		SELECT  T.*
		FROM	T
		WHERE	T.RNUM BETWEEN (#{currentPage}*10) - (10-1) AND (#{currentPage}*10)
	</select>
	
	<select id="selectNttCount" parameterType="hashMap" resultType="int">
		SELECT
			COUNT(0)
		FROM
			NTT N 
		WHERE 
			N.CMMN_NTT_SE= #{cmmnNttSe}
		<if test="keyword != null and keyword != ''">
			<choose>
				<when test="searchCondition == ''">
					AND
						N.NTT_NM LIKE '%'||#{keyword}||'%'
					OR
						N.NTT_CN LIKE '%'||#{keyword}||'%'
					OR
						N.MBER_ID LIKE '%'||#{keyword}||'%'
				</when>
				<when test="searchCondition == 'titl'">
					AND
						N.NTT_NM LIKE '%'||#{keyword}||'%'
				</when>
				<when test="searchCondition == 'cntn'">
					AND
						N.NTT_CN LIKE '%'||#{keyword}||'%'
				</when>
				<when test="searchCondition == 'titlCntn'">
					AND
						N.NTT_NM LIKE '%'||#{keyword}||'%'
					OR
						N.NTT_CN LIKE '%'||#{keyword}||'%'
				</when>
				<when test="searchCondition == 'writ'">
					AND
						N.MBER_ID LIKE '%'||#{keyword}||'%'
				</when>
			</choose>
		</if>
	</select>
	<select id="getFreeMaxCode" parameterType="nttVO" resultType="String">
		SELECT 
			#{clasCode} ||'FRB'|| TRIM(TO_CHAR(NVL(MAX(SUBSTR(ATCH_FILE_CODE,14)),0)+1, '00000'))
		FROM 
			ATCH_FILE
		WHERE 
			SUBSTR(ATCH_FILE_CODE,11,3) = 'FRB'
	</select>
	
	<select id="freeBoardDetail" parameterType="nttVO" resultType="nttVO">
		SELECT
			NTT_CODE
			,NTT_NM
			,NTT_CN
			,NTT_WRITNG_DT
			,NTT_STTEMNT_ACCMLT
			,NTT_ATCH_FILE_CODE
			,CMMN_NTT_SE
			,CMMN_NTT_STTEMNT
			,CLAS_CODE
			,SCHUL_CODE
			,MBER_ID
			,NTT_RDCNT
		FROM 
			NTT 
		WHERE 
			NTT_CODE = #{nttCode}
	</select>
	<update id="rdCntadd" parameterType="nttVO">
		UPDATE 
			NTT
		SET
			NTT_RDCNT = #{nttRdcnt}
		WHERE NTT_CODE = #{nttCode}
	</update>
	<!-- 자유게시판 상세조회 해당 게시물 첨부 파일 리스트 가져오기 -->
	<select id="selectAtchList" resultType="atchFileVO" parameterType="String">
		SELECT
			ATCH_FILE_CODE
			,ATCH_FILE_SN
			,ATCH_FILE_COURS
			,ATCH_FILE_NM
			,ATCH_FILE_TY
			,ATCH_FILE_DE
			,REGIST_ID
			,UPDT_DE
			,UPDT_ID 
		FROM 
			ATCH_FILE
		WHERE 
			ATCH_FILE_CODE = #{nttAtchFileCode}
	</select>
	
	<!--자유게시판 상세조회 해당 게시물 첨부파일 다운로드를 위한 디비에 저장된 파일명 가져오기  -->
	<select id="getFileName" resultType="atchFileVO" parameterType="atchFileVO">
		SELECT
			ATCH_FILE_CODE
			,ATCH_FILE_SN
			,ATCH_FILE_COURS
			,ATCH_FILE_NM
			,ATCH_FILE_TY
			,ATCH_FILE_DE
			,REGIST_ID
			,UPDT_DE
			,UPDT_ID
		FROM 
			ATCH_FILE
		WHERE
	 		ATCH_FILE_CODE = #{atchFileCode} AND ATCH_FILE_SN=#{atchFileSn}
	 	ORDER BY ATCH_FILE_SN
	</select>
	
	<!-- 자유게시판 상세조회 게시글 삭제 -->
	<delete id="deleteFreeBoard" parameterType="nttVO">
		DELETE FROM NTT WHERE NTT_CODE = #{nttCode}
	</delete>
	
	<!-- 자유게시판 첨부파일 해당 게시글 삭제시 첨부파일도 함께 삭제 -->
	<delete id="deleteAtchFile" parameterType="String">
		DELETE FROM ATCH_FILE WHERE ATCH_FILE_CODE = #{atchFileCode}
	</delete>
	
	<!-- 자유게시판 상세조회 게시글 수정-->
	<update id="updateFreeBoardAjax" parameterType="nttVO">
		UPDATE
			NTT
		SET
			NTT_NM = #{nttNm}
			,NTT_CN = #{nttCn}
		WHERE
			NTT_CODE=#{nttCode}
	</update>
	<!-- 자유게시판 상세조회 수정 시 기존 첨부 파일 개별 삭제시 실행되는 쿼리문 -->
	<delete id="deleteAtchFile2" parameterType="atchFileVO">
		DELETE
		FROM 
			ATCH_FILE
		WHERE
			ATCH_FILE_CODE = #{atchFileCode}
		AND 
			ATCH_FILE_SN = #{atchFileSn}
	</delete>
	<update id="updateFileSn" parameterType="hashMap">
		UPDATE
 			ATCH_FILE
		SET
			ATCH_FILE_SN = #{atchFileSn}
		WHERE 
			ATCH_FILE_CODE = #{atchFileCode} AND ATCH_FILE_SN = #{orignAtchFileSn}
	</update>
	
	<select id="selectNttVO" parameterType="nttVO" resultType="nttVO">
		SELECT
			NTT_CODE
			,NTT_NM
			,NTT_CN
			,NTT_WRITNG_DT
			,NTT_STTEMNT_ACCMLT
			,NTT_ATCH_FILE_CODE
			,CMMN_NTT_SE
			,CMMN_NTT_STTEMNT
			,CLAS_CODE
			,SCHUL_CODE
			,MBER_ID
			,NTT_RDCNT
		FROM
			NTT
		WHERE
			NTT_CODE = #{nttCode}
	</select>
	<!-- 댓글 코드 최대값 가져오기 -->
	<select id="getMaxAnswerCode" resultType="int">
		SELECT NVL(MAX(TO_NUMBER(ANSWER_CODE)),0) FROM ANSWER
	</select>
	<!-- 댓글 작성 insert -->
	<insert id="createReply" parameterType="answerVO">
		INSERT 
		INTO 
			ANSWER
			(ANSWER_CODE
			,ANSWER_CN
			,ANSWER_WRITNG_DT
			,NTT_CODE
			,SCHUL_CODE
			,MBER_ID)
		VALUES (
			#{answerCode}
			, #{answerCn}
			, SYSDATE
			, #{nttCode}
			, #{schulCode}
			, #{mberId}
		)
	</insert>
	<select id="selectReply" parameterType="nttVO" resultType="answerVO">
		SELECT 
			ANSWER_CODE
			,ANSWER_CN
			,ANSWER_WRITNG_DT
			,NTT_CODE
			,SCHUL_CODE
			,MBER_ID
		FROM 
			ANSWER
		WHERE
			NTT_CODE = #{nttCode}
		ORDER BY ANSWER_CODE DESC
	</select>
	<delete id="deleteReply" parameterType="answerVO">
		DELETE
		FROM 
			ANSWER
		WHERE
			ANSWER_CODE = #{answerCode}
	</delete>
</mapper>